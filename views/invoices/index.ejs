<h2> 
    Facturi
</h2>
<form action="/invoices" method="GET">
    <label>Cauta dupa </label>
    <select name="searchField">
        <% availableSearchTags.forEach((tag) => { %> 
            <% if (tag.searchField === searchOptions.searchField) { %> 
                <option selected label="<%= tag.displayName %>" value="<%= tag.searchField %>"/>
            <% } else {%>    
                <option label="<%= tag.displayName %>" value="<%= tag.searchField %>"/>
            <% } %>
        <% }) %> 
    </select>
    <input type="text" name="searchValue" value="<%= searchOptions.searchValue%>"/>
    <button type="submit">Cautare</button>
</form>
<br>
<% invoices.forEach(invoice => { %>
   <div><%= invoice.invoiceNo %> - <%=  %>
    <a href="/invoices/<%= invoice.id %>">View</a>
   <a href="/invoices/<%= invoice.id %>/edit">Edit</a>

    <%- include('../partials/deleteForm.ejs', 
        { url : `/invoices/${invoice.id}` }) %> 
 </div> 
<% }) %>